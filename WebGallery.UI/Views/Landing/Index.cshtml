@using Microsoft.Extensions.Configuration

@inject IConfiguration Configuration

@{
    string baseUrl = $"{Configuration.GetValue("ConnectionStrings:ApiEndpoint", "")}/images";
}

<main class="main-landing">
    <div class="row">
        <div class="col-12">
            <div class="row pt-4 mb-5 text-center">
                <div class="col-12">
                    <h2 class="text-white mb-4">Welcome</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="landing-section">
        <div class="row">
            <div class="col-2">
                <img src="@baseUrl/sha/1" alt="Banner Image" class="landing-img-banner">
            </div>
            <div class="col-9">
                <div class="landing-section--stats text-white">
                    <div class="row">
                        <div class="col-4">
                            <div data-url="/landing/stats?itemType=picture" data-async-view>
                                *loading*...
                            </div>
                        </div>
                        <div class="col-4">
                            <div data-url="/landing/stats?itemType=gif" data-async-view>
                                *loading*...
                            </div>
                        </div>
                        <div class="col-4">
                            <div data-url="/landing/stats?itemType=video" data-async-view>
                                *loading*...
                            </div>
                        </div>
                        <div class="col-4">
                            <div data-url="/landing/stats?itemType=album" data-async-view>
                                *loading*...
                            </div>
                        </div>
                        <div class="col-4">
                            <div data-url="/landing/stats?itemType=tag" data-async-view>
                                *loading*...
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row pt-4 mb-5 text-center">
        <div class="col-12">
            <h3 class="text-white mb-4">Popular Tags</h3>
        </div>
    </div>
</main>