@model WebGallery.UI.ViewModels.Bio.BioViewModel

<main class="main-content">
    <div class="bio-content">
        <div id="bio-img-partial">
            <partial name="_Picture" model="Model.BioPictureViewModel" />
        </div>
        <button class="btn btn-dark btn-sm" onclick="focusInput()">Tags</button>
        <div id="myDropdown">
            <input type="text" placeholder="Search.." id="myInput" style="display:none" />
            @foreach (var tag in Model.AllTags)
            {
                <a class="dropdown-item" onclick="addTag('@tag')" style="display:none">@tag</a>
            }
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center py-5">
            <p>
                <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
