<div class="customizer-form">
    <h2>Gallery Customizer</h2>
    <form>
        <div class="row">
            <div class="form-group col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <label>Set number of pics:</label>
                    </div>
                    <div class="col-md-10">
                        <div my-slider></div>
                    </div>
                    <div class="col-md-2">
                        <input class="form-control" type="number" data-number-pics />
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="inlineCheckbox1" value="option1">
                <label class="form-check-label" for="inlineCheckbox1">Allow GIFs</label>
            </div>
        </div>
    </form>
</div>